/* Dropdown menu styles */
.dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 150px;
    background: #fff;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 4px;
    display: none;
    z-index: 1000;
    padding: 10px 0;
}

.dropdown-menu li {
    display: block;
    padding: 10px 15px;
    white-space: nowrap;
}

.dropdown-menu li a {
    text-decoration: none;
    color: #333;
    display: flex;
    align-items: center;
    gap: 8px;
}

.dropdown-menu li a:hover {
    background: #f8f9fa;
    color: #007bff;
}

/* Active dropdown menu */
.dropdown:hover .dropdown-menu {
    display: block;
}

/* Custom icon styles */
.fi-rs-user,
.fi-rs-user-circle,
.fi-rs-sign-out,
.fi-rs-user-plus {
    font-size: 1.2rem;
}
</style>

