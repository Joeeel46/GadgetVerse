    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
    <script>

        document.getElementById('clearCartButton').addEventListener('click',async () => {
            try {
                const response = await fetch('/clear', {
                    method:'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                const result = await response.json()
                console.log(result)

                if(result.success){
                    await Swal.fire({
                        icon: 'success',
                        title: result.message,
                        showConfirmButton: true
                        
                    })
                    window.location.reload()
                }else{
                    await Swal.fire({
                        icon: 'error',
                        title: result.message,
                        showConfirmButton: true
                        
                    })

                    
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Failed to clear the cart',
                    timer:2000
                });
            }
        })

        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('shopButton').addEventListener('click', () => {
                window.location.href = '/shop';
            });
        })
        function removeFromCart(productId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/removeCart?productId=${productId}`, {
                        method: 'GET',
                    })
                        .then(response => {
                            if (response.redirected) {
                                window.location.href = response.url;
                            }
                        })
                        .catch(error => {
                            console.error("Error removing item from cart:", error);
                        });
                }
            });
        }

        function updateQuantity(productId, change, availableQuantity) {
            // Get elements
            const quantityElement = document.getElementById(`quantity-${productId}`);
            const currentQuantity = parseInt(quantityElement.textContent);
            const incrementButton = document.querySelector(`button[onclick="updateQuantity('${productId}', 1,'${availableQuantity}')"]`);
            const decrementButton = document.querySelector(`button[onclick="updateQuantity('${productId}', -1,'${availableQuantity}')"]`);

            // Check if buttons are already disabled to prevent multiple requests
            if ((change < 0 && decrementButton.disabled) || (change > 0 && incrementButton.disabled)) {
                return;
            }

            const maxQuantity = Math.min(availableQuantity, 5);

            // Validate quantity changes
            if (currentQuantity + change < 1) {
                Swal.fire({
                    icon: "warning",
                    title: "Minimum Quantity Reached",
                    text: "The minimum quantity is 1.",
                });
                return;
            } else if (currentQuantity + change > maxQuantity) {
                Swal.fire({
                    icon: "warning",
                    title: "Maximum Quantity Reached"
                });
                return;
            }

            // Immediately disable both buttons during the request
            incrementButton.disabled = true;
            decrementButton.disabled = true;

            fetch(`/update-cart-quantity`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({ productId, change }),
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        quantityElement.textContent = data.newQuantity;
                        document.getElementById(`subtotal-${productId}`).textContent = `₹ ${data.newSubtotal.toLocaleString()}`;
                        document.getElementById("total-price").textContent = `₹ ${data.totalPrice.toLocaleString()}`;

                        // Re-enable buttons based on the new quantity
                        decrementButton.disabled = data.newQuantity <= 1;
                        incrementButton.disabled = data.newQuantity >= maxQuantity;
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: data.message,
                        });
                        // Re-enable buttons on error based on current quantity
                        decrementButton.disabled = currentQuantity <= 1;
                        incrementButton.disabled = currentQuantity >= maxQuantity;
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    // Re-enable buttons on error based on current quantity
                    decrementButton.disabled = currentQuantity <= 1;
                    incrementButton.disabled = currentQuantity >= maxQuantity;
                });
        }
        function removeFromCart(event, productId) {
            if (event) event.preventDefault();

            fetch(`/removeItem?productId=${productId}`, {
                method: 'GET',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.message) {
                        // Find the cart item row
                        const cartItem = document.getElementById(`cart-item-${productId}`);

                        // Check if element exists before removing
                        if (cartItem) {
                            cartItem.remove();

                            const remainingProducts = document.querySelectorAll('tr[id^="cart-item-"]');
                            if (remainingProducts.length === 0) {
                                // No products left, show empty cart message
                                const cartTableContainer = document.getElementById('cart-table-container');
                                cartTableContainer.innerHTML = `
                                    <section id="empty-cart-section" class="mt-50 mb-50">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="text-center">
                                                        <h1 class="mb-4">Your Cart is Empty</h1>
                                                        <p class="mb-4">It seems like you haven't added any products to your cart yet.</p>
                                                        <p>Start browsing our products and add them to your cart to complete your order.</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="cart-action text-end">
                                            <a href="/" class="btn"><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                                        </div>
                                    </section>
                                `;

                                // Also hide or update the cart totals section
                                const cartTotalsSection = document.querySelector('.cart-totals');
                                if (cartTotalsSection) {
                                    cartTotalsSection.style.display = 'none';
                                }
                            }

                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: data.message,
                                showConfirmButton: false,
                                timer: 1500
                            });
                        } else {
                            console.error('Cart item element not found:', `cart-item-${productId}`);
                            // Still show success since database operation worked
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: data.message,
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => {
                                // If we can't find the element, reload the page
                                window.location.reload();
                            });
                        }
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to remove the product from the cart',
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    });
                });
        }
    </script>

